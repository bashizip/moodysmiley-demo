<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="SmileyView">
        <!--2-->
        <attr name="faceColor" format="color" />
        <attr name="eyesColor" format="color" />
        <attr name="mouthColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="0" />
            <enum name="sad" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleContactBadgeView">
        <!--2-->
        <attr name="textColor" format="color" />
        <attr name="bgColor" format="color" />
        <attr name="cname" format="string" />
        <attr name="amimate" format="enum">
            <enum name="yes" value="1" />
            <enum name="no" value="0" />
        </attr>
    </declare-styleable>
</resources>
